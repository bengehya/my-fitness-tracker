<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FitnesstrackingCompany" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/new_primary_variant</item>
        <item name="colorPrimaryVariant">@color/new_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/new_primary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background Colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/new_primary</item>
        <item name="android:navigationBarColor">@color/new_primary_variant</item>

        <!-- Optional: Splash Screen Support -->
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/white</item>
    </style>
</resources>
